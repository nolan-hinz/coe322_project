cmake_minimum_required( VERSION 3.12 )
project( testing
  DESCRIPTION "homework 8, pascal with options"
  VERSION 1.0 )

add_executable( testing main.cpp )
target_compile_features( testing PRIVATE cxx_std_23 )

find_package( PkgConfig REQUIRED )
pkg_check_modules( OPTS REQUIRED cxxopts )
message( STATUS "Cxxopts includes: ${OPTS_INCLUDE_DIRS}" )

target_include_directories(
        testing PUBLIC
        ${OPTS_INCLUDE_DIRS}
	)

install( TARGETS homework8 DESTINATION . )
